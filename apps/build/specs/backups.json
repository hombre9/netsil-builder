{
  "id": "backups",
  "container": {
      "type": "DOCKER",
      "volumes": [
        {
          "hostPath": "/var/log/netsil",
          "containerPath": "/var/log/netsil",
          "mode": "RW"
        }
      ],
      "docker": {
          "network": "BRIDGE",
          "image": "netsilprivate/backups:master-1.7.1-4390591.551",
          "forcePullImage": false,
          "portMappings": [
              {"containerPort": 9093, "hostPort": 9093, "protocol":"tcp"}
          ]
      }
  },
  "cmd": "supervisord -c /opt/netsil/backups/supervisor/backups-supervisor-include.conf",
  "cpus": 1.0,
  "mem": 16384,
  "instances": 1,
  "acceptedResourceRoles": ["*"],
  "constraints": [
      ["hostname", "UNIQUE"]
  ],
  "upgradeStrategy" : {
      "minimumHealthCapacity" : 0,
      "maximumOverCapacity" : 0
  },
  "uris": ["file:///etc/docker.tar.gz"],
  "env": {
    "NETSIL_BUILD_BRANCH": "master",
    "NETSIL_VERSION_NUMBER": "1.11.0",
    "NETSIL_COMMIT_HASH": "4390591",
    "NETSIL_BUILD_NUMBER": "551",
    "NETSIL_SERVICE_TAG": "master-1.7.1-4390591.551",
    "NETSIL_VERSION_TAG": "master-1.11.0-4390591.551",
    "PRODUCT_FLAVOR": "Pro",
    "MYSQL_HOST": "user-db.marathon.mesos",
    "MYSQL_PORT": "3306",
    "USER_PERSISTENCE_HOST": "user-persistence.marathon.mesos",
    "BUILD_ENV": "production"
  }
}

