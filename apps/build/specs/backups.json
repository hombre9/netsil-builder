{
  "id": "backups",
  "container": {
      "type": "DOCKER",
      "volumes": [
        {
          "hostPath": "/var/log/netsil",
          "containerPath": "/var/log/netsil",
          "mode": "RW"
        }
      ],
      "docker": {
          "network": "BRIDGE",
          "image": "netsil/backups:stable-1.4.0",
          "forcePullImage": false,
          "portMappings": [
              {"containerPort": 9090, "hostPort": 9090, "protocol":"tcp"}
          ]
      }
  },
  "cmd": "supervisord -c /opt/netsil/backups/supervisor/backups-supervisor-include.conf",
  "cpus": 1.0,
  "mem": 16384,
  "instances": 1,
  "acceptedResourceRoles": ["*"],
  "constraints": [
      ["hostname", "UNIQUE"]
  ],
  "upgradeStrategy" : {
      "minimumHealthCapacity" : 0,
      "maximumOverCapacity" : 0
  },
  "env": {
    "NETSIL_BUILD_BRANCH": "stable",
    "NETSIL_VERSION_NUMBER": "1.4.0",
    "NETSIL_COMMIT_HASH": "d6873a6f9",
    "NETSIL_BUILD_NUMBER": "0",
    "NETSIL_SERVICE_TAG": "stable-1.4.0",
    "NETSIL_VERSION_TAG": "stable-1.4.0",
    "PRODUCT_FLAVOR": "Pro",
    "MYSQL_HOST": "user-db.marathon.mesos",
    "MYSQL_PORT": "3306",
    "USER_PERSISTENCE_HOST": "user-persistence.marathon.mesos",
    "BUILD_ENV": "production"
  }
}

