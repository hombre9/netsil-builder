{
  "id": "license-manager",
  "container": {
      "type": "DOCKER",
      "volumes": [
        {
          "hostPath": "/var/log/netsil",
          "containerPath": "/var/log/netsil",
          "mode": "RW"
        },
        {
          "containerPath": "licenses",
          "mode": "RW",
          "persistent": {
            "size": 1
          }
        },
        {
          "containerPath": "/opt/netsil/license-manager/licenses",
          "hostPath": "licenses",
          "mode": "RW"
        }
      ],
      "docker": {
          "network": "BRIDGE",
          "image": "netsil/license-manager:stable-1.5.0",
          "forcePullImage": false,
          "portMappings": [
              {"containerPort": 9009, "hostPort": 9009, "protocol":"tcp"}
          ]
      }
  },
  "cpus": 1.0,
  "mem": 16384,
  "instances": 1,
  "acceptedResourceRoles": ["*"],
  "constraints": [
      ["hostname", "UNIQUE"]
  ],
  "upgradeStrategy" : {
      "minimumHealthCapacity" : 0,
      "maximumOverCapacity" : 0
  },
  "env": {
    "PRODUCT_FLAVOR": "Pro",
    "LICENSE_MANAGER_API_ENDPOINT": "https://lm.netsil.com",
    "LICENSE_MANAGER_SERVICE_PORT": "9009",
    "REDIS_HOST": "redis.marathon.mesos",
    "REDIS_PORT": "6379",
    "NETSIL_SPLB_HOST": "sp-load-balancer.marathon.mesos",
    "NETSIL_SPLB_PORT": "5005",
    "URI_NAMESPACE": "netsil",
    "NETSIL_BUILD_BRANCH": "stable",
    "NETSIL_VERSION_NUMBER": "1.4.5",
    "NETSIL_COMMIT_HASH": "eb379ea2a",
    "NETSIL_BUILD_NUMBER": "0",
    "NETSIL_SERVICE_TAG": "stable-1.5.0",
    "NETSIL_VERSION_TAG": "stable-1.4.5",
    "BUILD_ENV": "production",
    "USER_PERSISTENCE_SERVER_HOST": "user-persistence.marathon.mesos",
    "USER_PERSISTENCE_SERVER_PORT": "8891"
  },
  "residency": {
    "taskLostBehavior": "WAIT_FOREVER"
  }
}

