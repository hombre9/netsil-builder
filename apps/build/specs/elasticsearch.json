{
  "id": "elasticsearch",
  "container": {
     "type": "DOCKER",
     "volumes": [
       {
         "containerPath": "es_data",
         "mode": "RW",
         "persistent": {
           "size": 100
         }
       },
       {
         "containerPath": "/usr/share/elasticsearch/data",
         "hostPath": "es_data",
         "mode": "RW"
       },
       {
        "hostPath": "/var/log/netsil",
        "containerPath": "/var/log/netsil",
        "mode": "RW"
       }
     ],
     "docker": {
         "network": "BRIDGE",
         "image": "netsil/elasticsearch:stable-1.4.1",
         "forcePullImage": false,
         "portMappings": [
             {"containerPort": 9200, "hostPort": 9200, "protocol":"tcp"},
             {"containerPort": 9300, "hostPort": 9300, "protocol":"tcp"}
         ]
     }
 },
  "cpus": 1.0,
  "mem": 16384,
  "acceptedResourceRoles": ["*"],
  "constraints": [
      ["hostname", "UNIQUE"]
  ],
  "upgradeStrategy" : {
      "minimumHealthCapacity" : 0,
      "maximumOverCapacity" : 0
  },
  "instances": 1,
  "residency": {
    "taskLostBehavior": "WAIT_FOREVER"
  }
}

