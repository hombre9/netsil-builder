{
 "id": "ceph-monitor",
 "container": {
     "type": "DOCKER",
     "volumes": [
      {
        "containerPath": "ceph-data",
        "mode": "RW",
        "persistent": {
          "size": 100
        }
      },
      {
        "containerPath": "/var/lib/ceph-data",
        "hostPath": "ceph-data",
        "mode": "RW"
      },
      {
        "containerPath": "mon",
        "mode": "RW",
        "persistent": {
          "size": 100
        }
      },
      {
        "containerPath": "/etc/ceph/mon",
        "hostPath": "mon",
        "mode": "RW"
      },
      {
        "containerPath": "/var/log/netsil",
        "hostPath": "/var/log/netsil",
        "mode": "RW"
      },
      {
        "containerPath": "/var/run/ceph",
        "hostPath": "/var/run/ceph",
        "mode": "RW"
      }
     ],
     "docker": {
         "network": "HOST",
         "image": "netsil/ceph-monitor:stable-1.2.2",
         "forcePullImage": false,
         "privileged": false
     }
  },
  "ports": [
     9005, 6789
  ],
  "requirePorts" : true,
  "cpus": 1.0,
  "mem": 16384,
  "instances": 1,
  "acceptedResourceRoles": ["*"],
  "constraints": [
      ["hostname", "UNIQUE"]
  ],
  "upgradeStrategy" : {
      "minimumHealthCapacity" : 0,
      "maximumOverCapacity" : 0
  },
  "env": {
    "MON_PORT": "9001",
    "CEPH_CONF_DIR": "/etc/ceph/mon",
    "CEPH_DAEMON": "mon",
    "RESTAPI_PORT": "9005",
    "CEPH_DATA_DIR": "/var/lib/ceph-data",
    "PRODUCT_FLAVOR": "Pro"
  }
}

