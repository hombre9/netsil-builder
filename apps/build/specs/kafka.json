{
 "id": "kafka",
 "container": {
     "type": "DOCKER",
     "volumes": [
       {
         "containerPath": "/opt/netsil/kafka/kafka-log-dir",
         "hostPath": "/opt/netsil/kafka/kafka-log-dir",
         "mode": "RW"
       },
       {
         "hostPath": "/var/log/netsil",
         "containerPath": "/var/log/netsil",
         "mode": "RW"
       }
     ],
     "docker": {
         "network": "BRIDGE",
         "image": "netsilprivate/kafka:master-1.11.0-4390591.551",
         "forcePullImage": false,
         "portMappings": [
            {"containerPort": 9092, "hostPort": 9092, "protocol":"tcp"}
         ]
     }
 },
  "cpus": 1.0,
  "mem": 16384,
  "instances": 1,
  "acceptedResourceRoles": ["*"],
  "constraints": [
      ["hostname", "UNIQUE"]
  ],
  "upgradeStrategy" : {
      "minimumHealthCapacity" : 0,
      "maximumOverCapacity" : 0
  },
  "uris": ["file:///etc/docker.tar.gz"],
  "env": {
    "DO_SCALE": "yes",
    "PRODUCT_FLAVOR": "Pro",
    "DEPLOY_ENV": "marathon",
    "START_TIMEOUT": "10",
    "KAFKA_ADVERTISED_PORT": "9092",
    "KAFKA_ZOOKEEPER_CONNECT": "leader.mesos:2181",
    "KAFKA_LOG_RETENTION_BYTES": "262144000",
    "KAFKA_LOG_RETENTION_HOURS": "2",
    "KAFKA_LOG_DIRS": "/opt/netsil/kafka/kafka-log-dir",
    "KAFKA_LOG_SEGMENT_BYTES": "104857600",
    "KAFKA_NUM_PARTITIONS": "4",
    "KAFKA_DEFAULT_REPLICATION_FACTOR": "1"
  }
}

