{
 "id": "logstash",
 "container": {
     "type": "DOCKER",
     "volumes": [
       {
        "hostPath": "/var/log/netsil",
        "containerPath": "/var/log/netsil",
        "mode": "RW"
       }
     ],
     "docker": {
         "network": "BRIDGE",
         "image": "netsil/logstash:stable-1.4.1",
         "forcePullImage": false,
         "portMappings": [
             {"containerPort": 5044, "hostPort": 5044, "protocol":"tcp"},
             {"containerPort": 5055, "hostPort": 5055, "protocol":"udp,tcp"}
         ]
     }
 },
 "cpus": 1.0,
 "mem": 16384,
 "instances": 1,
 "acceptedResourceRoles": ["*"],
  "constraints": [
      ["hostname", "UNIQUE"]
  ],
  "upgradeStrategy" : {
      "minimumHealthCapacity" : 0,
      "maximumOverCapacity" : 0
  },
 "env": {
    "ELASTICSEARCH_HOSTNAME": "elasticsearch.marathon.mesos",
    "ELASTICSEARCH_HTTP_PORT": "9200",
    "ZK_HOST": "leader.mesos",
    "ZK_PORT": "2181",
    "KAFKA_SERVER": "kafka.marathon.mesos",
    "KAFKA_PORT": "9092"
 }
}

