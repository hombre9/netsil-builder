{
 "id": "{{ user-db.app_id }}",
 "container": {
     "type": "DOCKER",
     "volumes": [
       {
         "containerPath": "mysqldata",
         "mode": "RW",
         "persistent": {
           "size": 1000
         }
       },
       {
         "containerPath": "/var/lib/mysql",
         "hostPath": "mysqldata",
         "mode": "RW"
       },
       {
        "hostPath": "/var/log/netsil",
        "containerPath": "/var/log/netsil",
        "mode": "RW"
       }
     ],
     "docker": {
         "network": "BRIDGE",
         "image": "{{ uri_namespace }}/user-db:{{ netsil_service_tag }}",
         "forcePullImage": false,
         "portMappings": [
             {"containerPort": {{ user-db.port }}, "hostPort": {{ user-db.port }}, "protocol":"tcp"}
         ]
     }
 },
  "cpus": {{ cpus }},
  "mem": {{ mem }},
  "instances": {{ instances }},
  "acceptedResourceRoles": ["{{ role }}"],
  "constraints": [
      ["hostname", "UNIQUE"]
  ],
  "upgradeStrategy" : {
      "minimumHealthCapacity" : 0,
      "maximumOverCapacity" : 0
  },
{{#private}}
  "uris": ["file:///etc/docker.tar.gz"],
{{/private}}
  "env": {
    "MYSQL_ALLOW_EMPTY_PASSWORD": "yes"
  },
  "residency": {
    "taskLostBehavior": "WAIT_FOREVER"
  }
}
