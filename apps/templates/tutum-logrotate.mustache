{
 "id": "{{ tutum-logrotate.app_id }}",
  "cpus": {{ tutum-logrotate.cpus }},
  "mem": {{ tutum-logrotate.mem }},
  "instances": {{ tutum-logrotate.instances }},
  "constraints": [
    [
      "hostname",
      "UNIQUE"
    ]
  ],
  "acceptedResourceRoles": ["{{ tutum-logrotate.role }}"],
  "upgradeStrategy" : {
      "minimumHealthCapacity" : 0,
      "maximumOverCapacity" : 0
  },
  "env": {
    "DO_SCALE": "yes"
  },
  "container": {
    "type": "DOCKER",
    "volumes": [
      {
        "containerPath": "/var/lib/docker/containers",
        "hostPath": "/var/lib/docker/containers",
        "mode": "RW"
      }
    ],
    "docker": {
      "image": "tutum/logrotate:latest",
      "network": "BRIDGE",
      "privileged": false,
      "parameters": [],
      "forcePullImage": false
    }
  }
}